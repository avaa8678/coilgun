int oldval = 0;
long time2 = 0;
long time1 = 0;


double LENGTH = 0.0095;    


LiquidCrystal_I2C lcd(0x27, 16, 2);




void setup() {
  pinMode(speedometer1, INPUT);
  pinMode(speedometer2, INPUT);
  pinMode(7, OUTPUT);

  lcd.init();
  lcd.clear();
  lcd.backlight();
  lcd.setCursor(0, 0);

  Serial.begin(9600);  // for serial monitor
  attachInterrupt(digitalPinToInterrupt(speedometer1), triggerSpeedometer1, RISING);
  attachInterrupt(digitalPinToInterrupt(speedometer2), triggerSpeedometer2, RISING);
  Serial.print("Should have printed something");
  
}

void triggerSpeedometer1() {
  // lcd.setCursor(0, 0);
  time1 = micros();
  // lcd.print(time1);
  Serial.print(time1);
}

void triggerSpeedometer2() {
  // lcd.setCursor(0, 8);
  time2 = micros();
  // lcd.print(time2);
  Serial.print(time2);
  // lcd.setCursor(1, 0);
  // lcd.print("Velocity: ");
  // lcd.print(LENGTH/timeLapse);
  // lcd.print(" m/s ");
}


void loop() {
  if(time1 != 0 && time2 != 0) {
    lcd.setCursor(0, 0);
    lcd.print(time1);
    lcd.setCursor(8, 0);
    lcd.print(time2);
    lcd.setCursor(0, 1);
    lcd.print("Velocity:");
    double timeLapse = (time2 - time1)/1000000.0;
    lcd.print(LENGTH/timeLapse);
    lcd.print("m/s ");
    time1 = 0;
    time2 = 0;
    delay(20000);
    lcd.clear();
  }
  
